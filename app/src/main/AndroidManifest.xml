<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">
        <activity
            android:name=".ui.theme.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".IconBlinkit"
            android:targetActivity=".ui.theme.MainActivity"
            android:enabled="false"
            android:icon="@mipmap/ic_blinkit_alternate"
            android:roundIcon="@mipmap/ic_blinkit_alternate"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".IconShopsy"
            android:targetActivity=".ui.theme.MainActivity"
            android:enabled="false"
            android:icon="@mipmap/ic_shopsy_alternate"
            android:roundIcon="@mipmap/ic_shopsy_alternate"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".IconZepto"
            android:targetActivity=".ui.theme.MainActivity"
            android:enabled="false"
            android:icon="@mipmap/ic_zepto_alternate"
            android:roundIcon="@mipmap/ic_zepto_alternate"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".IconNavi"
            android:targetActivity=".ui.theme.MainActivity"
            android:enabled="false"
            android:icon="@mipmap/ic_navi_alternate"
            android:roundIcon="@mipmap/ic_navi_alternate"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

    </application>

</manifest>